package if_else:
public class if_else02;
  public static void main(String[] args) {
    // 조건문 else if
    // 한라봉 에이드가 있으면 +1, 또는 망고쥬스 +1, 또는 아아+1

    boolean hallabongAde = true;
    boolean mangojuice = true;

    if (hallabongAde) {
    System.out.println("한라봉 에이드 +1"); 
    } else if (mangojuice) {
    System.out.println("망고쥬스 +1");
    }
    System.out.println("음료 주문 완료");


    hallabongAde = false;
    mangojuice = true;    
    if (hallabongAde) {
    System.out.println("한라봉 에이드 +1"); 
    } else if (mangojuice) {
    System.out.println("망고 쥬스 +1");
    } else { 
    System.out.println("아이스 아메리카노 +1"); 
    }
    System.out.println("음료 주문 완료 #2"); 

    	hallabongAde = false;
		mangojuice = false;
		boolean orangeAde = true;

		if (hallabongAde) {
			System.out.println("한라봉 에이드 +1");
		} else if (mangojuice) {
			System.out.println("망고 쥬스");
		} else if (orangeAde) {
			System.out.println("오렌지 에이드");
		}
		System.out.println("음료 주문 완료 #3");


		orangeAde = false;
		if (hallabongAde) {
			System.out.println("한라봉 에이드 +1");
		} else if (mangojuice) {
			System.out.println("망고 쥬스");
		} else if (orangeAde) {
			System.out.println("오렌지 에이드");
		} 
		System.out.println("아이스 아메리카노 +1");
		
		System.out.println("음료 주문 완료 #4");
		
    
    }
}
