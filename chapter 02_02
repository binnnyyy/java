package chapter02;
public class chapter02_02;
  public static void main(String[] args) {
    int level;   // 정수형 변수 level을 선언
    level = 10;  // level 변수에 값 10을 대입
    System.out.println(level); // level 값 출력 -> 10


    int level2 = 20; // level 변수 선언과 동시에 값을 대입 (초기화)
    System.out.println(level2); // 20 출력

    short sVal = 10;
    byte bVal = 20;
    System.out.println(sVal + bVal); // 30 출력

  }
}
      
    


